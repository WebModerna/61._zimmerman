// El header principal de la web
h1, h2, h3, h4, h5, h6
	font-family fuente_heading_bold

.heading
	background negro_header
	box-shadow 0px 5px 10px 1px negro_header
	// overflow hidden
	position relative
	z-index 87

	// El Botón del Menú
	&__menu
		display inline-block
		float right
		margin 0.5em 0

		a
			color amarillo_flor
			font-size $em
			font-weight lighter
			text-decoration none
			transition all 0.2s ease-in-out
			&:hover
				color azul_feisbuc

	// El Título principal
	&__title
		color gris_suave
		clear both
		font-size $em*0.7
		padding-left 0.5em
		padding-right 0.5em


// El logotipo
.heading__logo
	// border 1px solid red
	display inline-block
	float left
	margin-left 5px
	margin-top 5px
	transition all 0.1s ease-in-out

	&__figure
		max-width 200px
		padding 0
		margin 0.25em
		img
			width 100%

// Las Mediaqueries
@media all and (min-width: 400px)
	.heading
		&__menu
			margin $em 0

		&__logo
			&__figure
				max-width 300px


@media all and (min-width: 1000px)
	.heading
		// display table
		width 100%
		// El botón del Menú
		&__menu
			display none

		// El logotipo
		&__logo
			&__figure
				margin 0.5em

		// El Título principal
		&__title
			font-size $em*1.1
			// text-align left
