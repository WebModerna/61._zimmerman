// Entradas, Categorías, Tags, Searchings
.entradas
	background blanco_puro
	box-sizing border-box
	margin 1em

	&__article
		// background blanco_grisaceo2
		border-bottom 1px solid blanco_grisaceo2
		// display table-row
		margin $em 0
		padding-bottom $em
		padding-top $em*0.5
		text-align left

		ol
		ul
			margin-left 1em

		&__figure
			display table-cell
			margin 0
			max-width 100px
			min-width 100px
			overflow hidden
			padding 0
			vertical-align top

			a
				display block
				position relative
				text-decoration none
				transition_comun()
				imagenizador()


			img
				display block
				width 100%


		&__header
			&__title
				// background gris_fuerte
				color blanco
				font-size $em
				padding 0
				margin 0
				// text-transform uppercase

				a
					color azul_feisbuc
					display block
					padding 0.3em 50px 0.3em 0.25em
					position relative
					text-decoration none
					// transition_comun()

					/*&:after
						content "+"
						height 30px
						font-family monospace
						font-size 30px
						margin-top -15px
						position absolute
						right 0.5em
						text-align center
						top 50%
						transition_comun()
						width 30px
*/
					&:hover
					&:focus
						color azul_asfalto
						// background rosa_suave

						// &:after
						// 	transform rotate(180deg)


		&__right
			display table-cell
			padding-left 0.5em
			vertical-align top
			width 100%

	&__article:last-child
	&__article.last-child
		border-bottom none

	&__header
		&__title
			color gris_suave
			padding 0
			margin 0
			font-size $em

@media all and (min-width: 540px)
	.entradas
		&__article
			&__figure
				max-width 100px
				min-width 100px

			&__header
				&__title
					font-size $em

					a
						padding-left 0.5em

@media all and (min-width: 740px)
	.entradas
		&__article
			&__figure
				max-width 150px
				min-width 150px

@media all and (min-width: 900px)
	.entradas
		margin-left 0
		margin-top 0
		text-align left
		vertical-align top

@media all and (min-width: 1200px)
	.entradas
		&__article
			display inline-block
			width 49.5%

