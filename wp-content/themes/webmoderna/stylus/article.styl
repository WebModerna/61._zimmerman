// Categorizaciones de las entradas
.categorizacion
	// border-top 1px dashed gris_suave
	// border-top 1px dashed rgba(gris_suave, 0.5)
	color gris_suave
	display table
	margin 0
	padding 0.25em 0
	text-align left
	width 100%

	&__icono
		// border-right 1px dashed gris_suave
		// border-right 1px dashed rgba(gris_suave, 0.5)
		// color verde_azulado
		display table-cell
		padding 0.25em 0.25em 0.25em 0
		vertical-align top
		width 1.5em

	&__list
	ul.categorizacion__list
	ol.categorizacion__list
		display table-cell
		font-family fuente
		// font-style italic
		// font-weight bolder
		margin-left 0
		padding-left 0.5em
		vertical-align middle

		&__items
		.post-categories
			margin 0
			padding 0

			li
				display inline-block
				padding 0
				margin 0

				a
					background gris_suave
					border-radius 3px
					color blanco
					display inline-block
					padding 1px 3px
					text-align center
					text-decoration none
					text-shadow_lindo()
					vertical-align middle

					&:first-letter
						text-transform uppercase

					&:hover
					&:focus
						color blanco
						background rosa_suave

	&:first-child
	&.first-child
		border-top none

// Artículos de Páginas
.page
	background blanco_puro
	margin $em
	text-align left

	&__article
		ol
		ul
			li
				// text-indent 1em
				margin-bottom 0.5em
				margin-top 0.5em

		&__figure
			border 1px solid blanco_grisaceo2
			margin 0 auto 1em auto
			padding 0
			max-width 400px

			a
			img
				display block
				width 100%

			a
				position relative
				text-decoration none
				transition_comun()
				imagenizador()


			figcaption
				background blanco_grisaceo2
				color gris
				font-family fuente_heading_bold
				// font-style italic
				font-weight bolder
				padding 0.5em
				text-align center

		&__form_comentarios
			margin 1em auto


		&__header
			// background rosa_suave
			background gris_nube
			// border-bottom 10px solid gris_suave
			margin 0 0 $em*0.5 0
			padding 0.5em
			text-align center

			&__title
				color gris_suave
				font-family fuente_heading_bold
				font-size $em*0.9
				font-weight bolder
				margin 0
				padding 0
				text-transform uppercase


@media all and (min-width: 900px)
	.page
		margin-top 0
		margin-left 0

@media all and (min-width: 1200px)
	.page
		&__article
			&__figure
				// float left
				// margin 0.25em 1em 1em 0
				float right
				margin 0 0 1em 1em
				min-width 400px

