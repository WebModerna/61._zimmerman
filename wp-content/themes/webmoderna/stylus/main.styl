// Estructura principal del web en su cuerpo central
a
	color azul_feisbuc
	transition all 0.1s ease-in-out
	&:hover
	&:focus
		color azul_asfalto

body
	ol, ul
		// list-style-position inside

html
	color gris_medio
	font-family fuente
	font-size $em
	text-align center
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

// reutilizables
.clearboth
.separador
	clear both


.wrapper
	// background blanco_grisaceo2
	margin 0 auto

// medias queries
@media all and (min-width: 900px)
	// .wrapper
	// 	max-width 1200px

	.content
		box-sizing border-box
		// display inline-block
		// float left
		margin-left 0
		// max-width 70%
		// vertical-align top
		// width 100%
	
	.con_barra
		box-sizing border-box
		display inline-block
		float left
		max-width 59%
		min-width 59%
		vertical-align top
		width 59%
		// display inline-block
		// margin 0
		// min-width 69%
		// max-width 69%
		// width 100%
	
	.englobador
		padding-left $em
		padding-right $em
		margin-left auto
		margin-right auto
		// max-width 1200px


	.separador
		margin 0.65em 0

@media all and (min-width: 1000px)
	.con_barra
		max-width 64%
		min-width 64%
		width 64%
	
@media all and (min-width: 1100px)
	.con_barra
		max-width 66%
		min-width 66%
		width 66%

@media all and (min-width: 1200px)
	.con_barra
		max-width 70%
		min-width 70%
		width 70%
